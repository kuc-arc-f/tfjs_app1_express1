function get_config(lbl, hnum ,pred ){
	var config = {
			type: 'line',
			data: {
				labels: lbl ,
				datasets: [{
                    label: 'H-num',
                    fill: false,
					backgroundColor: color_red,
                    borderColor: color_red,
                    data: hnum ,
				}, {
					label: 'L-num',
					fill: false,
					backgroundColor: color_blue,
                    borderColor: color_blue,
                    data: pred,
				}]
			},
			options: {
                responsive: true,
				title: {
					display: true,
					text: ' '
				},
				tooltips: {
					mode: 'index',
					intersect: false,
				},
				hover: {
					mode: 'nearest',
					intersect: true
				},
				scales: {
					xAxes: [{
                      display: true,  
						ticks: {
							autoSkip: false,
                        },
					}],
					yAxes: [{
						display: true,
						scaleLabel: {
							display: true,
							labelString: 'Value'
						}
					}]
				}
			}
        };
		return config;
}
